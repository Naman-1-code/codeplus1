  <script>
    function toggleTheme() {
      const root = document.documentElement;
      const isDark = root.style.getPropertyValue('--primary-bg').includes('#7f00ff');
      if (isDark) {
        root.style.setProperty('--primary-bg', '#f5f5f5');
        root.style.setProperty('--text-light', '#000');
        root.style.setProperty('--card-bg', '#fff');
        root.style.setProperty('--sidebar-bg', '#eee');
        root.style.setProperty('--button-text', '#000');
      } else {
        root.style.setProperty('--primary-bg', 'linear-gradient(135deg, #7f00ff, #e100ff)');
        root.style.setProperty('--text-light', '#fff');
        root.style.setProperty('--card-bg', 'rgba(255, 255, 255, 0.1)');
        root.style.setProperty('--sidebar-bg', 'rgba(255, 255, 255, 0.08)');
        root.style.setProperty('--button-text', '#7f00ff');
      }
    }
  </script>

